@model IEnumerable<ManagementPortal.Models.ShiftTime>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Shift Times</h2>

<p>
    <a type="button" class="btn btn-sm btn-primary" href="@Url.Action("Create")">
        <i class="fa fa-plus-square"></i> Create New
    </a>
</p>
<table class="table table-striped table-bg table-hover">
    <tr>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Monday)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Tuesday)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Wednesday)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Thursday)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Friday)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Saturday)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Sunday)
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Default)
        </th>
        <th scope="col"></th>
    </tr>

    @foreach (var item in Model) {
        <tr scope="row">
            <td>
                @Html.DisplayFor(modelItem => item.Monday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tuesday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Wednesday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Thursday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Friday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Saturday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sunday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Default)
            </td>
            <td class="text-right">
                <a type="button" class="btn btn-sm btn-primary" href="@Url.Action("Edit", new { id = item.ShiftTimeId })">
                    <span>
                        <i class="fa fa-pencil"></i> Edit
                    </span>
                </a>
                <a type="button" class="btn btn-sm btn-primary" href="@Url.Action("Details", new { id = item.ShiftTimeId })">
                    <span>
                        <i class="fa fa-list"></i> Details
                    </span>
                </a>
                <a type="button" class="btn btn-sm btn-primary" href="@Url.Action("Delete", new { id = item.ShiftTimeId })">
                    <span>
                        <i class="fa fa-trash"></i> Delete
                    </span>
                </a>
            </td>
        </tr>
    }

</table>

